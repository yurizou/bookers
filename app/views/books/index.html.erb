<h1>Books</h1>
<% @books.each do |book| %>


      <p>title</p>
      <span><%= book.title %></span>
      <p>body</p>
      <span><%= book.body %></span>
      <p>   
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      </p>
<% end %>
<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
 

<% end %>